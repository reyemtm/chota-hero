<% if (post.link){ %>
  <!--link-->
  <h2 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <!--index-->
    <h2 itemprop="name" class="post-title">
      <a href="<%- post.permalink %>"><%- post.title %></a>
    </h2>
    <%- partial('date', {class_name: 'article-date', date_format: null}) %>
    <br>
    <%- partial('tag') %>
  <% } else { %>
    <!--else-->
    <h2 itemprop="name" class="post-title"><%- post.title %></h2>
    <%- partial('date', {class_name: 'article-date', date_format: null}) %>
    <br>
    <%- partial('tag') %>
  <% } %>
<% } %>