<% if (post.link){ %>
  <h2 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2 itemprop="name">
      <%= post.title %>
    </h2>
    <p class="post-date"><%= date(post.date, 'MMMM DD, YYYY') %></p>
    <p><%- post.excerpt %></p>
    <a href="<%-post.permalink %>" class="zp-headline zp-headline-dashed"><span>Read More</span></a>
  <% } else { %>
    <h2 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>